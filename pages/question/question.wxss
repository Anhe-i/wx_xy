/* pages/question/question.wxss */

.question {
  box-sizing: border-box;
  height: 100vh;
  background: rgba(246, 246, 246, 1);
  font-family: MicrosoftYaHei;
 
}

.question>view:nth-child(1) {
  height: 26rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  padding-top:20rpx;
  padding-bottom:44rpx;
  padding-left:23rpx;
}
.question>view:nth-child(2){
  background:#fff;
   
   padding:7rpx 0rpx 7rpx 20rpx;

}
.question>view:nth-child(2)>view{
  display: flex;
  justify-items: center;
  justify-content: space-between;
  padding-right:20rpx;
  height:75rpx;
  line-height:75rpx;
  border-bottom:1rpx solid rgba(196,196,196,1);
}
.question>view:nth-child(2)>view:last-child{
  border-bottom:none;
}

.question>view:nth-child(2)>view>text:nth-child(1){
  height:30rpx;
font-size:30rpx;
font-family:MicrosoftYaHei;
font-weight:bold;
color:rgba(102,102,102,1);
}
.question>view:nth-child(2)>view>text:nth-child(2)
{
  font-size:22rpx;
  color:rgba(153,153,153,1);
}