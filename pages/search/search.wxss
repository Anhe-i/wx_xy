/* pages/search/search.wxss */

.search {
  box-sizing: border-box;
}

.search-top {
  display: flex;
  padding: 0rpx 30rpx;
  position: relative;
}

.search-top input {
  width: 520rpx;
  height: 68rpx;
  border: 1rpx solid rgba(97, 97, 97, 1);
  border-radius: 34rpx;
  padding-left:100rpx;
  box-sizing: border-box;
  font-size:30rpx;
}

.search-inp {
  font-size: 20rpx;
  font-weight: bold;
  color: rgba(199, 199, 199, 1);
  /* padding-left: 100rpx; */
}

.search-top button {
  /* width: 108rpx; */
  height: 68rpx;
  background: rgba(95, 163, 239, 1);
  border-radius: 34rpx;
  font-size:30rpx;
  line-height:68rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
.search-top .iconfont{
  position: absolute;
  top:20rpx;
  /* font-size:24rpx; */
  color:rgba(122,122,122,1);
  left:65rpx;
}