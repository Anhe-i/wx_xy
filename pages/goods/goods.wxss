/* pages/goods/goods.wxss */

.goods {
  padding: 0rpx 20rpx;
}

.goods-img {
  position: relative;
  width: 100%;
}
.goods-img .swiper{
  height:480rpx;
}
.goods-img image {
  /* margin-top:30rpx; */
  width: 100%;
  height: 480rpx;
}

.goods-img .icon-left:before {
  position: absolute;
  left: 10rpx;
  top: 218rpx;
  width: 66rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  color: #fff;
  border-radius: 50%;
  background: rgba(0, 0, 0, 1);
  opacity: 0.37;
  z-index:10;
}

.goods-img .icon-right:before {
  position: absolute;
  right: 10rpx;
  top: 218rpx;
  width: 66rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  color: #fff;
  border-radius: 50%;
  background: rgba(0, 0, 0, 1);
  opacity: 0.37;
  z-index:10;
}

.goods-list {
  /* height: 680rpx; */
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 14rpx 29rpx 0rpx rgba(16, 39, 75, 0.44);
  border-radius: 14rpx;
  margin-top: 21rpx;
  padding: 28rpx 0rpx 52rpx;
}

.goods-list-one {
  border-bottom: 8rpx solid rgba(242, 242, 242, 1);
  padding: 0rpx 33rpx 18rpx;
}

.goods-list-one>view:nth-child(1) {
  font-size: 26rpx;
  font-weight: bold;
  color: rgba(97, 97, 97, 1);
}

.goods-list-one>view:nth-child(2) {
  font-size: 22rpx;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
  margin-top: 10rpx;
}

.goods-list-one>view:nth-child(3) {
  display: flex;
  justify-content: space-between;
}

.goods-list-one>view:nth-child(3)>view {
  font-size: 26rpx;
  font-weight: bold;
  color: rgba(95, 163, 239, 1);
}
.goods-list-one>view:nth-child(3)>view:nth-child(2) text{
  margin-right:2rpx;
}
.goods-list-one>view:nth-child(3) .iconfont {
  color: #fff;
  background: rgba(224, 224, 224, 1);
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.goods-list-one>view:nth-child(3)>view:nth-child(2) {
  margin-top: 28rpx;
} 
 
.goods-list-two>view {
  height: 84rpx;
  padding: 0rpx 33rpx;
  border-bottom: 2rpx solid rgba(242, 242, 242, 1);
  line-height: 84rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: rgba(133, 133, 133, 1);
}
.goods-list-two>view .iconfont{
  font-size:28rpx;
  color:rgba(95,163,239,1);
  margin-right:26rpx;
}
.goods-list-three{
  display: flex;
  justify-content: space-between;
  margin-top:200rpx;
  padding:0rpx 105rpx;
}
.goods-list-three button{
  width:200rpx;
  height:67rpx;
  background:rgba(95,163,239,1);
  border-radius:34rpx;
  font-size:26rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
}

.deposit{
  font-size:26rpx;
  font-weight:bold;
  color: #D3D3D3;
}