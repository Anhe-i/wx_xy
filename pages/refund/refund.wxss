/* pages/refund/refund.wxss */

.refund {
  font-family: MicrosoftYaHei;
  font-weight: 400;
  box-sizing: border-box;
}

.refund-top {
  text-align: center;
  height: 30rpx;
  font-size: 30rpx;
  color: rgba(102, 102, 102, 1);
}

.refund-con {
  margin-top: 85rpx;
  padding-left: 20rpx;
}

.refund-con>view {
  display: flex;
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
  border-bottom: 1rpx solid rgba(227, 227, 227, 1);
  height: 60rpx;
  line-height: 60rpx;
  justify-items: center;
}

.refund-con>view>text {
  width: 140rpx;
}

.refund-con>view input {
  text-align: center;
  width: 450rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.refund-con-pla {
  font-size: 28rpx;
  color: rgba(209, 209, 209, 1);
}

.refund-btn {
  margin-top: 258rpx;
}

.refund-btn button {
  width: 710rpx;
  height: 80rpx;
  background: rgba(95, 163, 239, 1);
  border-radius: 40rpx;
  line-height: 80rpx;
  font-size:36rpx;
  color:rgba(254,254,254,1);
}
