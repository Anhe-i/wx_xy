/* pages/incomeDetails/incomeDetails.wxss */

.income-nav {
  display: flex;
  text-align: center;
  font-family: MicrosoftYaHei;
}

.income-nav>view {
  width: 50%;
  height: 30rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.income-nav-active {
  color: rgba(95, 163, 239, 1);
  border-bottom: 3rpx solid rgba(95, 163, 239, 1);
}

.income-list {
  margin-top: 15rpx;
  padding-left: 20rpx;
}

.income-list>view {
  padding-right: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  height: 78rpx;
  line-height: 78rpx;
  border-bottom: 1rpx solid rgba(227, 227, 227, 1);
}

.income-list>view .iconfont {
  font-size: 30rpx;
  color: rgba(95, 163, 239, 1);
}

.income-list>view text:nth-child(1) {
  margin-right: 14rpx;
}

.income-list-none {
  display: none;
}

.spend-list {
  margin-top: 15rpx;
  padding-left: 20rpx;
}

.spend-list>view {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
  height:108rpx;
  padding-top:20rpx;
  border-bottom:1px solid rgba(227,227,227,1);
}
.spend-list>view text{
  display:block;

}