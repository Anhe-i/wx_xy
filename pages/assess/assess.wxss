/* pages/assess/assess.wxss */

.content {
  display: flex;
  justify-content: flex-start;
  padding: 31rpx 21rpx;
  border-bottom: 1px solid #cfcfcf;
}

.img image {
  width: 100rpx;
  height: 100rpx;
  padding-right: 41rpx;
}

.title {
  color: #616161;
  font-size: 32rpx;
  padding: 12rpx 0;
}

.font {
  color: #999;
  font-size: 28rpx;
}

.submit {
  padding-left: 22rpx;
  font-size: 26rpx;
  color: #cecccc;
 padding-top: 15rpx;
}

.add {
  width: 130rpx;
  height: 130rpx;
  border: 1px dashed rgba(154, 154, 154, 1);
  display: flex;
  flex-direction: column;
  font-size: 22rpx;
  text-align: center;
  margin-top: 159rpx;
}
.add .iconfont{
  padding-top: 40rpx;
  padding-bottom: 14rpx;
  font-size: 39rpx;
}

.assess {
  width: 710rpx;
  height: 80rpx;
  background: rgba(95, 163, 239, 1);
  border-radius: 40px;
  position: absolute;
  bottom: 20rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 80rpx;
  color: #fefefe;
}
