/* pages/selfCenter/selfCenter.wxss */

.selfCenter {
  box-sizing: border-box;
  font-family: MicrosoftYaHei;
}

.sc-top {
  text-align: center;
  border-bottom: 8rpx solid rgba(242, 242, 242, 1);
}

.sc-top>view:nth-child(1) image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.sc-top>view:nth-child(1)>view:nth-child(2)>text {
  font-size: 30rpx;
  line-height: 30rpx;
  height: 30rpx;
  font-weight: bold;
  color: rgba(97, 97, 97, 1);
}

.sc-top>view:nth-child(1)>view:nth-child(2)>text:nth-child(2) {
  margin-left: 11rpx;
  font-size: 22rpx;
  color: #5fa3ef;
}

.sc-top>view:nth-child(2) {
  display: flex;
  margin-top: 40rpx;
  /* background:red; */
}

.sc-top>view:nth-child(2)>view {
  width: 33.33%;
}

.sc-top>view:nth-child(2)>view>text {
  display: block;
}

.sc-top>view:nth-child(2)>view>text:nth-child(1) {
  height: 38rpx;
  vertical-align: center;
}

.sc-top>view:nth-child(2)>view .iconfont {
  font-size: 38rpx;
  color: rgba(95, 163, 239, 1);
  font-weight: bolder;
  /* background:red; */
}

.sc-top>view:nth-child(2)>view> .canUse {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(95, 163, 239, 1);
  /* height: 32rpx; */
}

.sc-top>view:nth-child(2)>view>text:nth-child(2){
  font-size: 26rpx;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
  padding: 20rpx 0rpx 31rpx;
}

.sc-con {
  padding: 24rpx 34rpx;
}

.sc-con-box {
  background: #fff;
  box-shadow: 0rpx 14rpx 29rpx 0rpx rgba(16, 39, 75, 0.44);
  border-radius: 14rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: rgba(97, 97, 97, 1);
  padding:0rpx 0rpx 26rpx;
}
.sc-con-box .iconfont{
  width:14rpx;
  height:26rpx;
  font-size:26rpx;
  color:rgba(95,163,239,1);
  float:right;

}
.sc-con-box>view{
  padding:0rpx 29rpx 0rpx 49rpx;
  height:80rpx;
  vertical-align: center;
  line-height: 80rpx;
  border-bottom:1rpx solid rgba(242,242,242,1);
}
.user{
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin: 0 auto;
  border-radius: 50%;
}
.zz{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #ccc;
  font-size: 16rpx;
  position: absolute;
  top: 0;
  left: 50%;
  text-align: center;
  line-height: 120rpx;
  opacity: 0.4;
  margin-left: -60rpx;
}