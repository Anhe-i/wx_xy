/* pages/waiting/waiting.wxss */

.waiting {
  font-family: MicrosoftYaHei;
  font-weight: 400;
}

.waiting-top {
  margin-top: 74rpx;
  padding: 0rpx 50rpx;
}

.waiting-top>view {
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 115rpx;
  display: flex;
  justify-items: center;
  /* border-left:1rpx dotted rgba(153,153,153,1) */
}

.waiting-top>view>text:nth-child(1) {
  font-size: 14rpx;
  color: rgba(153, 153, 153, 1);
  margin-right: 46rpx;
}

.waiting-top>view:nth-child(1)>text:nth-child(1) {
  color: rgba(95, 163, 239, 1);
}
.waiting-top>view:nth-child(2)>text:nth-child(1) {
  color: rgba(95, 163, 239, 1);
  font-size:55rpx;
  margin-left:-20rpx;
  margin-right:28rpx;
   
}
 
.waiting-top>view .waiting-top-normal {
  font-size: 30rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 30rpx;
}

.waiting-top-active {
  font-size: 32rpx;
  color: rgba(102, 102, 102, 1);
}

.waiting-con {
  margin-top: 160rpx;
  border-top: 1rpx solid rgba(213, 213, 213, 1);
  padding: 23rpx 20rpx;
}

.waiting-con>view {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  height: 28rpx;
  line-height: 28rpx;
  margin-bottom: 35rpx;
}

.waiting-con>view:nth-child(2) {
  margin-bottom: 0rpx;
}

.waiting-con>view:nth-child(2)>text:nth-child(2) {
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
}

.waiting-btn {
  margin-top: 173rpx;
  text-align: center;
}

.waiting-btn button {
  width: 320rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #fff;
  border: 2rpx solid rgba(95, 163, 239, 1);
  border-radius: 3rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(95, 163, 239, 1);
}
