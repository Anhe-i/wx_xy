/* pages/withdrawal/withdrawal.wxss */

.withdrawal {
  box-sizing: border-box;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  /* padding: 0rpx 0rpx 0rpx 29rpx; */
}

.wd-first {
  padding:0rpx 20rpx;
  height: 65rpx;
  line-height: 65rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  border-bottom: 1px solid rgba(213, 213, 213, 1);
}

.wd-first>text:nth-child(2) {
  color: rgba(102, 102, 102, 1);
}

.wd-second {
  padding: 12rpx 0rpx 0rpx 20rpx;
}

.wd-second>view:nth-child(1) {
  padding: 12rpx 0rpx;
}

.wd-second>view:nth-child(1) text {
  display: block;
}

.wd-second>view:nth-child(1)>text:nth-child(1) {
  font-size: 30rpx;
  font-family: MicrosoftYaHei;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
}

.wd-second>view:nth-child(1)>text:nth-child(2) {
  font-size: 50rpx;
  font-family: FZHTK--GBK1-0;
  font-weight: bold;
  color: rgba(95, 163, 239, 1);
}

.wd-second>view:nth-child(2)>view:nth-child(1) {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
}

.wd-second>view:nth-child(2)>view:nth-child(2) {
  display: flex;
  border-bottom: 1rpx solid rgba(213, 213, 213, 1);
  height: 66rpx;
  line-height: 66rpx;
  vertical-align: center;
  margin-top: 12rpx;
}

.wd-second>view:nth-child(2)>view:nth-child(2)>text {
  font-size: 50rpx;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
  padding-right: 19rpx;
}

.wd-second>view:nth-child(2)>view:nth-child(2)>input {
  font-size: 50rpx;
  font-family: ArialMT;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
  height: 66rpx;
  line-height: 66rpx;
}

.wd-second>view:nth-child(2)>view:nth-child(3) {
  padding-top: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.wd-second>view:nth-child(2)>view:nth-child(3)>text:nth-child(2n) {
  color: rgba(95, 163, 239, 1);
}

.wd-second>view:nth-child(2)>view:nth-child(3)>text:nth-child(4) {
  padding-left: 10rpx;
}

.wd-second .wd-second-inp{
  color:#d5d5d5;
}
.wd-third {
  margin-top: 110rpx;
}

.wd-third button {
  width: 710rpx;
  height: 80rpx;
  background: rgba(95, 163, 239, 1);
  border-radius: 40rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.wd-fourth {
  margin-top: 170rpx;
  padding:0rpx 30rpx;
}

.wd-fourth>view {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid rgba(213, 213, 213, 1);
}

.wd-fourth>view>view:nth-child(1) text:nth-child(1) {
  font-size: 20rpx;
  color: rgba(95, 163, 239, 1);
  margin-right: 12rpx;
}
.wd-fourth>view:nth-child(2)>view:nth-child(1) text:nth-child(1){
  color: rgba(117,105,241,1)
}
 
.wd-fourth>view:nth-child(3)>view:nth-child(1) text:nth-child(1){
 color:rgba(83,239,192,1);
}
.wd-fourth>view:nth-child(4)>view:nth-child(1) text:nth-child(1){
 color:rgba(255,189,88,1);
}